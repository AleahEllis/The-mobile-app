pageColor = rgba(180, 140, 45, 1)


support-for-ie ?= true

    opacity(n)
      opacity n
      if support-for-ie
        filter unquote('progid:DXImageTransform.Microsoft.Alpha(Opacity=' + round(n * 100) + ')')



/* general page stylings */

*
	margin 0

#logo
	width 200px
	display block
	margin 0 auto

body 
	font-family Verdana
	background-color pageColor
	// background url("../images/appBackground.png")
	// background-repeat no-repeat
	// background-size %100
	
.container
	width 80%
	margin 0 auto

/* header */
.header 
	width 100%
	background-color darken(pageColor, 20%)
	padding 5px 0
	margin 0
h1 
	text-align center
	color #fff
	font-size 50px

a 
	text-align center
	text-decoration none
	color black

/*diff colors obviously*/
a:link
	color brown

a:visited
	color dark-grey
 
a:hover
	color grey

/* dropdown menus */
.dropdowns
	margin 40px 0px
.brewMenu
	color #000
	font-size 19px
	background-color lighten(pageColor, 70%)
	width 49%
	height 40px
	border 0px
	font-family Verdana
	margin-bottom 20px
#beerDropdown
	float right
.brewMenuhover
	cursor pointer
	background-color lighten(pageColor, 50%)	
	
/* styles for partial view */
.views
	background-color lighten(pageColor, 20%)
	padding 20px
	border-radius 5px
	display none

/* beer info view */
#beerInfo p 
	line-height 1.7em

#beerInfo span
	font-weight bold

/* footer */
footer 
	text-align center
	color #fff
	font-size 100%
	clear both
	line-height 2em
	padding 2em
	bottom 0
	width 100%

/* lightbox styling and functionality- some things we should not change */
#contactFade
	display none
	position fixed
	top 0%
	left 0%
	width 100%
	height 100%
	background-color #000
	z-index 1001
	-moz-opacity 0.7
	opacity 0.7 
	
#contact
	display none 
	position fixed
	top 45%
	left 45%
	right 45%
	bottom 45%
	width 4em
	height 8em
	// margin-left -150px
	// margin-top -100px               
	padding .5em
	border 2px solid #FFF
	background #CCC
	z-index 1002  
	overflow visible  
	text-align center  

#aboutFade
	display none
	position fixed
	top 0%
	left 0%
	width 100%
	height 100%
	background-color #000
	z-index 1001
	-moz-opacity 0.7
	opacity 0.7
	
#about
	display none
	position fixed
	top 25%
	left 25%
	right 25%
	width 40em
	height 23em
	padding .5em
	border 2px solid #FFF
	background-color #CCC
	z-index 1002
	overflow visible
	bottom 25%
	text-align center