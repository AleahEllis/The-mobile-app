/* general page stylings */

*
	margin 0
body
	font-family Verdana

/* header */
.header 
	width 100%
	background-color rgba(180, 140, 45, 1)
	padding 20px 0px
h1 
	text-align center
	color #fff
	font-size 50px

a 
	text-align center

/* dropdown menus */
.dropdowns
	width 80%
	margin 0 auto
	margin-top 40px
.brewMenu
	color white
	font-size 19px
	background-color rgba(180, 140, 45, 1)
	width 48%
	height 40px
	border 0px
	font-family Verdana
.brewMenu:hover
	cursor pointer
	background-color rgba(180, 140, 45, 0.8)